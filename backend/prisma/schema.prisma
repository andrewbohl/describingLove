generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Item {
  currency    String?
  description String?
  id          Int     @default(autoincrement()) @id
  name        String?
  price       Float?
  Weapon      Weapon?
}

model Weapon {
  class      String?
  damage     Json?
  itemID     Int     @unique
  properties Json?
  weaponID   Int     @default(dbgenerated()) @id
  Item       Item    @relation(fields: [itemID], references: [id])
}